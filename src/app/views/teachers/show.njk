{% extends "layout.njk" %}
{% block content %}
    <div
        class="card">
        {# no-repeat center center / cover configuração complementar da imagem #}
        <section class="avatar" style=" background: url('{{ teacher.avatar_url }}'); "></section>
        <section class="details">
            <h3>Teacher Details</h3>
            <div class="item">
                <div>Nome completo</div>
                <div>{{ teacher.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.select }}</div>
            </div>
            <div class="item">
                <div>Tipo de Ensino</div>
                <div>
                    <span>
                        {{ "Presencial" if teacher.typeofclass == "presencial"  else "À
          distância" }}
                    </span>
                </div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in teacher.services %}
                        <span>
                            {{ service }}
                        </span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>
            <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
        </section>
    </div>
{% endblock content %}
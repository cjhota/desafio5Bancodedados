<div class="item">
    <div>Avatar Url</div>
    <div>
        <input type="url" name="avatar_url" placeholder="https://" value="{{ teacher.avatar_url }}" />
    </div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input type="text" name="name" id="" placeholder=" Ana casa maior" value="{{ teacher.name }}" />
    </div>
</div>

<div class="item">
    <div>Data de Nascimente</div>
    <div>
        <input type="date" name="birth" id=""
            value="{{ teacher.birth }}">{# <input type="date" name="birth" placeholder="01/01/2020" onfocus="(this.type='date')" value="{{ teacher.birth }}"/> #}
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education">
            <option value="medio" class="option" {% if teacher.education == "medio" %} selected {% endif %}>Ensino Médio
                Completo</option>
            <option value="superior" class="option" {% if teacher.education == "superior" %} selected {% endif %}>Ensino
                Superior Completo</option>
            <option value="mestrado" class="option" {% if teacher.education == "mestrado" %} selected {% endif %}>
                Mestrado</option>
            <option value="doutorado" class="option" {% if teacher.education == "doutorado" %} selected {% endif %}>
                Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de Ensino</div>
    <div>
        <span><input type="radio" name="typeofclass" id="" value="presencial"
                {% if teacher.typeofclass == "presencial" %} checked {% endif %} />Presencial</span>
        <span><input type="radio" name="typeofclass" id="" value="ead" {% if teacher.typeofclass == "ead" %} checked
                {% endif %} />À distância</span>
    </div>
</div>

<div class="item">
    <div>Acompanhamento</div>
    <div>
        <input type="text" name="services" placeholder="serviços prestados por virgulas" value="{{ teacher.services }}">
    </div>
</div>

<button type="submit">Salvar</button>
{% extends "layout.njk" %}
{% block content %}
    <div
        class="card">
        {# no-repeat center center / cover configuração complementar da imagem #}
        <section class="avatar" style=" background: url('{{ student.avatar_url }}'); "></section>
        <section class="details">
            <h3>Teacher Details</h3>
            <div class="item">
                <div>Nome completo</div>
                <div>{{ student.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ student.birth }}</div>
            </div>
            <div class="item">
                <div>E-mail</div>
                <div>{{ student.email }}</div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ student.education }}</div>
            </div>
            <div class="item">
                <div>Carga Horária</div>
                <div>{{ student.hoursweek }} Hora por Semana</div>
            </div>
            <div class="item"></div>
            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>
            </section>
        {% endblock content %}